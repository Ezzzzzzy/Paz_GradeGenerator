<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.paz.gradegenerator.MainActivity">


    <TextView
    android:id="@+id/tv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Quiz1"
    android:textSize="30dp"
        android:layout_alignBottom="@+id/et1" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:hint="Enter Grade"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
    android:id="@+id/tv2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Quiz2"
    android:textSize="30dp"
    android:layout_alignBottom="@+id/et2" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:hint="Enter Grade"
        android:inputType="number"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/et1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seatworks"
        android:textSize="30dp"
        android:layout_alignTop="@+id/et3"/>

    <EditText
        android:id="@+id/et3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:hint="Enter Grade"
        android:inputType="number"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/et2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lab Exam"
        android:textSize="30dp"
        android:layout_below="@+id/et3"
        android:layout_marginTop="33dp" />

    <EditText
        android:id="@+id/et4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:hint="Enter Grade"
        android:inputType="number"
        android:layout_above="@+id/tv5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Major Exam"
        android:textSize="30dp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/tv4" />

    <EditText
        android:id="@+id/et5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:hint="Enter Grade"
        android:inputType="number"
        android:layout_alignBottom="@+id/tv5"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compute"
        android:gravity=""
        android:id="@+id/submit"
        android:onClick="callSecond"
        android:layout_below="@+id/tv5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />


</RelativeLayout>
